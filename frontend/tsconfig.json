{
  "compilerOptions": {
    "target": "es5" ,
    "module": "esnext" ,
    "jsx": "react-jsx" ,
    "declaration": true ,
    "outDir": "dist" ,
    "isolatedModules": true ,
    "strict": true ,
    "noImplicitAny": true ,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "moduleResolution": "node" ,
    "baseUrl": "." ,
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true ,
    "esModuleInterop": true ,
    "skipLibCheck": true ,
    "forceConsistentCasingInFileNames": true ,
  },
  "include": ["src", "src/custom.d.ts", "test"]
}
